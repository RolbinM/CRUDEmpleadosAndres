@page
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Login - Gestor Vacaciones</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">

    <link href="https://fonts.googleapis.com/css2?family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/css/LoginStylesheet.css">
</head>
<body>

    <div class="wrapper bg-white">
        <div class="h2 text-center">Gestor Vacaciones</div>
        <div class="h4 text-muted text-center pt-2">Ingrese sus credenciales</div>
        <form class="pt-3" method="post" action="@Url.Action("Login", "Login")">
            <div class="form-group">
                <span class="far fa-user p-2"></span> 
                <input type="text" placeholder="Usuario" name="inUsuario" required class="form-control">
            </div>
            <div class="form-group pb-4">
                <span class="fas fa-lock p-2"></span> 
                <input type="text" placeholder="Contraseña" name="inClave" required class="form-control">
            </div>
            <div class="row justify-content-md-center container-alert">
                @if (TempData["Error"] != null)
                {
                    <div class="alert alert-danger" role="alert">
                        @TempData["Error"]
                    </div>
                }
            </div>
   
            <div class="row">
                <div class="col-12">
                    <button class="btn">Iniciar Sesión</button>
                </div>
            </div>
            
           
        </form>
    </div>
    
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
    <script>
        
    </script>

</body>
</html>
